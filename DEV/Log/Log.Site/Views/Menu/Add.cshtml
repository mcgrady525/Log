<div style="padding: 15px; overflow: hidden">
    <form id="ui_menu_addform" method="post" action="">
        <table class="tableForm" width="100%">
            <tr>
                <th>
                    名称：
                </th>
                <td>
                    <input type="text" name="Name" id="Name" />
                </td>
            </tr>
            <tr>
                <th>
                    父菜单：
                </th>
                <td>
                    <input class="easyui-combotree" id="ComboParentMenu" name="ComboParentMenu"
                           data-options="url: '@Url.Action("GetAll", "Menu")',lines:true" />
                    <img style="cursor: pointer; vertical-align: middle;" onclick="$('#ComboParentMenu').combotree('clear');"
                         alt="清空父节点" title="清空父节点" src="@Url.Content("~/Content/easyui-1.3.2/icon/edit-clear.png")" />
                </td>
            </tr>
            <tr>
                <th>
                    标识码：
                </th>
                <td>
                    <input type="text" name="Code" id="Code" />
                </td>
            </tr>
            <tr>
                <th>
                    链接地址：
                </th>
                <td>
                    <input type="text" name="Url" id="Url" />
                </td>
            </tr>
            <tr>
                <th>
                    图标：
                </th>
                <td>
                    <input type="text" name="Icon" id="Icon" />
                </td>
            </tr>
            <tr>
                <th>
                    排序：
                </th>
                <td>
                    <input name="Sort" class="easyui-numberspinner" style="width: 70px;"
                           value="10" data-options="min:1,max:100,editable:false">
                </td>
            </tr>
        </table>
    </form>
</div>
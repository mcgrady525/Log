<div style="padding: 15px; overflow: hidden">
    <form id="ui_user_setroleform" method="post" action="">
        <table class="tableForm" width="100%">
            <tr>
                <th>
                    用户：
                </th>
                <td>
                    <input type="hidden" id="UserIds" name="UserIds" />
                    <input type="text" id="UserNames" name="UserNames" style="width: 170px;"
                           disabled="disabled" />
                </td>
            </tr>
            <tr>
                <th>
                    用户角色：
                </th>
                <td>
                    <input class="easyui-combobox" id="ComboboxRole" name="ComboboxRole"
                           data-options="url: '@Url.Action("GetAll", "Role")',editable:false,valueField:'Id',textField:'RoleName',multiple:true" />
                    <img style="cursor: pointer; vertical-align: middle;" onclick="$('#RoleIds').combobox('clear');"
                         alt="清空角色" title="清空角色" src='@Url.Content("~/Content/easyui/icon/edit-clear.png")' />
                </td>
            </tr>
        </table>
    </form>
</div>
<div id="ui_debugLogBlackList_layout" class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'center',border:false, title:''">
        <table id="ui_debugLogBlackList_dg" data-options="fit:true,border:false"></table>
    </div>
</div>
@if (false)
{
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.js"></script>
}

<script type="text/javascript">
    $(function () {
        //默认加载所有
        GetAll();
    });

    //默认加载所有
    function GetAll() {
        $.ajax({
            url: '@Url.Action("GetButtonsByUserIdAndMenuCode", "Organization")',
            type: "POST",
            dataType: "json",
            data: { "menuCode": "debugLogBlackList", "pageName": "debugLogBlackList" },
            timeout: 5000,
            success: function (data) {
                if (data.success) {
                    var oldSelectRoleId;
                    var toolbar = getToolBar(data);
                    if (data.browser) {
                        $("#ui_debugLogBlackList_dg").datagrid({
                            url: '@Url.Action("GetPagingBlackList", "DebugLogBlackList")',
                            striped: true,
                            rownumbers: true,
                            pagination: true,
                            pageSize: 10,
                            idField: 'Id',
                            sortName: 'CreatedTime',
                            sortOrder: 'desc',
                            pageList: [10, 20, 40, 60, 80, 100],
                            frozenColumns: [[{ field: 'ck', checkbox: true }]],
                            columns: [[
                                       { field: 'Content', title: '关键字', sortable: true, width: 600 },
                                       { field: 'CreatedTime', title: '创建时间', sortable: true, width: 150 },
                                       { field: 'LastUpdatedTime', title: '上次修改时间', sortable: true, width: 150 }
                            ]],
                            toolbar: toolbar.length == 0 ? null : toolbar
                        });
                    }
                    else {
                        $.show_warning("提示", "无权限，请联系管理员！");
                    }
                } else {
                    $.show_warning("错误", data.result);
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                if (textStatus == "timeout") {
                    $.show_warning("提示", "请求超时，请刷新当前页重试！");
                }
                else {
                    $.show_warning("错误", textStatus + "：" + errorThrown);
                }
            }
        })
    };

    //新增黑名单
    function debugLogBlackList_add() {
        $("<div/>").dialog({
            id: "ui_debugLogBlackList_add_dialog",
            href: '@Url.Action("Add", "DebugLogBlackList")',
            title: "添加黑名单",
            height: 350,
            width: 460,
            modal: true,
            buttons: [{
                id: "ui_debugLogBlackList_add_btn",
                text: '添 加',
                handler: function () {
                    $("#ui_debugLogBlackList_addform").form("submit", {
                        url: '@Url.Action("Add", "DebugLogBlackList")',
                        onSubmit: function (param) {
                            $('#ui_debugLogBlackList_add_btn').linkbutton('disable');
                            if ($(this).form('validate')) {
                                return true;
                            }
                            else {
                                $('#ui_debugLogBlackList_add_btn').linkbutton('enable');
                                return false;
                            }
                        },
                        success: function (data) {
                            var dataJson = eval('(' + data + ')');
                            if (dataJson.success) {
                                $("#ui_debugLogBlackList_add_dialog").dialog('destroy');
                                $.show_warning("提示", dataJson.msg);
                                $("#ui_debugLogBlackList_dg").datagrid("reload").datagrid('clearSelections').datagrid('clearChecked');//刷新并清除已选择
                            } else {
                                $('#ui_debugLogBlackList_add_btn').linkbutton('enable');
                                $.show_warning("提示", dataJson.msg);
                            }
                        }
                    });
                }
            }],
            onLoad: function () {
                $("#KeyWord").focus();
            },
            onClose: function () {
                $("#ui_debugLogBlackList_add_dialog").dialog('destroy');
            }
        });
    };

    //删除黑名单
    function debugLogBlackList_delete() {
        var rows = $('#ui_debugLogBlackList_dg').datagrid('getChecked');
        if (rows.length < 1) {
            $.show_warning("提示", "请先勾选要删除的记录!");
            return;
        }

        $.messager.confirm('提示', '确定删除勾选的这' + rows.length + '条记录吗？', function (r) {
            if (r) {
                para = {};
                para.ids = "";
                $.each(rows, function (i, row) {
                    para.ids += row.Id + ",";
                });
                $.ajax({
                    url: '@Url.Action("Delete", "DebugLogBlackList")',
                    data: para,
                    type: "POST",
                    dataType: "json",
                    success: function (data) {
                        if (data.success) {
                            $.show_warning("提示", data.msg);
                            $("#ui_debugLogBlackList_dg").datagrid("reload").datagrid('clearSelections').datagrid('clearChecked');
                        } else {
                            $.show_warning("提示", data.msg);
                        }
                    }
                });
            }
        });
    };

</script>